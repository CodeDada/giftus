{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-giftusapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/giftusApi/giftusApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-giftusapi-release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/giftusApi/giftusApi.csproj",
                "--configuration",
                "Release",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean-giftusapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/giftusApi/giftusApi.csproj"
            ]
        },
        {
            "label": "restore-giftusapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/giftusApi/giftusApi.csproj"
            ]
        },
        {
            "label": "run-giftusapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/giftusApi/giftusApi.csproj",
                "--urls",
                "http://localhost:5056"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "watch-giftusapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/giftusApi/giftusApi.csproj",
                "--urls",
                "http://localhost:5056"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "test-giftusapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/giftusApi/giftusApi.csproj",
                "--verbosity",
                "normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet: build (frontend)",
            "command": "npm",
            "type": "shell",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/giftusUI"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "npm: dev (frontend)",
            "command": "npm",
            "type": "shell",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/giftusUI"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^.*$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "ready - started server on"
                }
            }
        }
    ]
}
